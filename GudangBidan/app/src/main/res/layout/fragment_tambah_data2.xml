<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambahData"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
       >

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/putih"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/textRegrister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_noRegristrasi"
                    android:textSize="@dimen/text_size2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editIdPasien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hint_regristrasi"
                    android:inputType="number"
                    android:textSize="@dimen/text_size2" />

                <TextView
                    android:id="@+id/textNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_nama"
                    android:textSize="@dimen/text_size2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hint_namaPasien"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/text_size2" />

                <TextView
                    android:id="@+id/textTanggalLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tanggalLahir"
                    android:textSize="@dimen/text_size2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTanggalLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/hint_tanggal"
                    android:textSize="@dimen/text_size2"
                    android:inputType="none"/>

                <TextView
                    android:id="@+id/textTanggalPeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tanggal_periksa"
                    android:textSize="@dimen/text_size2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTanggalPeriksa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/text_tanggalPeriksa"
                    android:inputType="none"
                    android:textSize="@dimen/text_size2" />

                <TextView
                    android:id="@+id/textKeluhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_keluhan"
                    android:textSize="@dimen/text_size2"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editKeluhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hint_keluhan"
                    android:inputType="textMultiLine|text"
                    android:textSize="@dimen/text_size2" />

                <TextView
                    android:id="@+id/textDiagnosa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_diagnosa"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editDiagnosa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/hint_diagnosa"
                    android:inputType="textMultiLine|text"
                    android:textSize="@dimen/text_size2" />

                <Button
                    android:id="@+id/btnSubmitPasien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="237dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/text_tambahData"
                    android:textColor="@color/textColor_button"
                    android:textSize="@dimen/text_size2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editDiagnosa"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>